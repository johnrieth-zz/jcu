@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
  
  <div class="usa-grid">
    <div class="usa-width-one-half">
  <form method="post" class="usa-form">
    <fieldset>
       <label for="rank">Rank</label>
      <input id="rank" name="rank" type="text" required aria-required="true">
       <label for="last-name">Last name</label>
      <input id="last-name" name="last-name" type="text" required aria-required="true">

      <label for="first-name">First name</label>
      <input id="first-name" name="first-name" type="text" required aria-required="true">

      <label for="middle-name">Middle name <span class="usa-input-label-helper"></span></label>
      <input id="middle-name" name="middle-name" type="text">
      <div class="usa-input-grid usa-input-grid">
          <label for="service">Service</label>
          <select id="service" name="service" >
            <option value="Army">Army</option>
            <option value="Navy"> Navy </option>
             <option value="Air Force">Air Force </option>
            <option value="Marines">Marines</option>


          </select>
        </div>
        
        <label for="occupation">MOS/AFSC/Rate</label>
        <input id="occupation" name="occupation" type="text" required aria-required="true">
         <label for="email">Email address</label>
    <input id="email" name="email" type="email" autocapitalize="off" autocorrect="off" required aria-required="true">
      <label for="phone">Telephone</label>
    <input id="telephone" name="telephone" type="text" autocapitalize="off" autocorrect="off">
      
  <label for="input-type-textarea">Comments</label>
  <textarea id="input-type-textarea" name="input-type-textarea"></textarea>
     
        <input type="submit" value="Submit">
    </fieldset>
  </form>
</div>
